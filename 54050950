    class WebThread extends Thread {

        String urlname;
        URL verifiedUrl;
        JEditorPane EditorPaneTest;
        JTextArea AstatusTest;

        WebThread(String uname,String urltxt, JEditorPane EditorPaneTest, JTextArea AstatusTest) {
            this.urlname = uname;
            this.EditorPaneTest = EditorPaneTest;
            this.AstatusTest = AstatusTest;
            verifiedUrl = verifyUrl(urltxt);
            if (verifiedUrl == null) {
                JOptionPane.showMessageDialog(null, "Invalid URL", "Error", JOptionPane.ERROR_MESSAGE);
                this.destroy();
            }
        }

        private URL verifyUrl(String url) {
            URL verifiedUrl = null;
            try {
                verifiedUrl = new URL(url);
            } catch (Exception e) {
                return null;
            }
            return verifiedUrl;
        }

        @Override
        public void run() {
            String str = urlname + "Start\n";
            AstatusTest.setText(str);
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            try {
                URLConnection conn = verifiedUrl.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                
                str += "Printing Response Header...\n";
                
                for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                    str += entry.getKey() +":"+entry.getValue()+"\n";
                }

                str += "\nGet Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");

                if (server == null) {
                    str += "Key 'Server' is not found!";
                } else {
                    str += "Server - " + server;
                }
                str += "\n Done";
                } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            }
            
            AstatusTest.setText(str);
            
            try {
                EditorPaneTest.setPage(verifiedUrl);
                //Thread.sleep(5000);
            } catch (Exception e) {
                // Show error messsage.
                JOptionPane.showMessageDialog(null, e.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            } finally {
                // Return to default cursor.
                setCursor(Cursor.getDefaultCursor());
                str += "\n" + urlname + " Stop";
                AstatusTest.setText(str);
            }
        }
    }

